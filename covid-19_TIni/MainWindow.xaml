<Window x:Class="covid_19_TIni.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:covid_19_TIni"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="103*"/>
            <ColumnDefinition Width="689*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFBD2727" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="Btn_CaricaLista" Content="Carica" HorizontalAlignment="Left" Margin="240,329,0,0" VerticalAlignment="Top" Width="121" Click="Btn_CaricaLista_Click" FontFamily="Microsoft Sans Serif" Grid.Column="1" Height="57" FontSize="24" FontWeight="Bold" Foreground="#FFFF0028" Background="#FF00CBFF"/>
        <ListBox x:Name="LIst_covid19" Margin="61,50,52,110" FontFamily="Segoe Print" FontWeight="Bold" Background="Black" Foreground="White" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
